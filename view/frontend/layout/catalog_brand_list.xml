<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Brands</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="page.top">
            <block class="Blacksheep\Brand\Block\Breadcrumbs" name="brand.breadcrumbs.initialize"/>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Blacksheep\Brand\Block\ListBrand" name="brands.list" template="list.phtml"/>
        </referenceContainer>
    </body>
</page>
